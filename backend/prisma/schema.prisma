generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

enum TournamentStatus {
  DRAFT
  OPEN
  RUNNING
  FINISHED
}

model Organizer {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")

  publicSlug             String?  @unique @map("public_slug")
  isPublicProfileEnabled Boolean  @default(true) @map("is_public_profile_enabled")
  showFinancials         Boolean  @default(false) @map("show_financials")

  tournaments Tournament[]

  @@map("organizers")
}

model Player {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now()) @map("created_at")

  matchesAsPlayer1 Match[] @relation("Player1Matches")
  matchesAsPlayer2 Match[] @relation("Player2Matches")
  matchesWon       Match[] @relation("WinnerMatches")
  championOf       Tournament[] @relation("TournamentChampion")
  runnerUpOf       Tournament[] @relation("TournamentRunnerUp")

  @@map("players")
}

model Tournament {
  id          String           @id @default(uuid())
  name        String
  publicSlug  String?          @unique @map("public_slug")
  organizerId String           @map("organizer_id")
  status      TournamentStatus @default(DRAFT)
  drawSeed    String?          @map("draw_seed")
  createdAt   DateTime         @default(now()) @map("created_at")
  startedAt   DateTime?        @map("started_at")
  finishedAt  DateTime?        @map("finished_at")

  totalCollected Decimal? @map("total_collected")
  prizePool      Decimal? @map("prize_pool")

  entryFee              Decimal? @map("entry_fee")
  organizerPercentage   Decimal? @map("organizer_percentage")
  firstPlacePercentage  Decimal? @map("first_place_percentage")
  secondPlacePercentage Decimal? @map("second_place_percentage")
  championPercentage    Decimal? @map("champion_percentage")
  runnerUpPercentage    Decimal? @map("runner_up_percentage")
  thirdPlacePercentage  Decimal? @map("third_place_percentage")
  fourthPlacePercentage Decimal? @map("fourth_place_percentage")
  calculatedPrizePool   Decimal? @map("calculated_prize_pool")
  calculatedOrganizerAmount Decimal? @map("calculated_organizer_amount")
  championId            String?  @map("champion_id")
  runnerUpId            String?  @map("runner_up_id")
  champion              Player?  @relation("TournamentChampion", fields: [championId], references: [id], onDelete: SetNull)
  runnerUp              Player?  @relation("TournamentRunnerUp", fields: [runnerUpId], references: [id], onDelete: SetNull)

  organizer Organizer @relation(fields: [organizerId], references: [id], onDelete: Restrict)
  rounds    Round[]
  matches   Match[]

  @@index([organizerId])
  @@index([organizerId, createdAt])
  @@index([organizerId, status])
  @@index([status])
  @@map("tournaments")
}

model Round {
  id           String   @id @default(uuid())
  tournamentId String   @map("tournament_id")
  roundNumber  Int      @map("round_number")
  createdAt    DateTime @default(now()) @map("created_at")

  tournament Tournament @relation(fields: [tournamentId], references: [id], onDelete: Restrict)
  matches    Match[]

  @@unique([tournamentId, roundNumber])
  @@index([tournamentId])
  @@map("rounds")
}

model Match {
  id                String    @id @default(uuid())
  tournamentId      String    @map("tournament_id")
  roundId           String    @map("round_id")
  player1Id         String    @map("player1_id")
  player2Id         String?   @map("player2_id")
  winnerId          String?   @map("winner_id")
  player1Score      Int?      @map("player1_score")
  player2Score      Int?      @map("player2_score")
  isBye             Boolean   @default(false) @map("is_bye")
  positionInBracket Int       @map("position_in_bracket")
  createdAt         DateTime  @default(now()) @map("created_at")
  finishedAt        DateTime? @map("finished_at")

  tournament Tournament @relation(fields: [tournamentId], references: [id], onDelete: Restrict)
  round      Round      @relation(fields: [roundId], references: [id], onDelete: Restrict)
  player1    Player     @relation("Player1Matches", fields: [player1Id], references: [id], onDelete: Restrict)
  player2    Player?    @relation("Player2Matches", fields: [player2Id], references: [id], onDelete: Restrict)
  winner     Player?    @relation("WinnerMatches", fields: [winnerId], references: [id], onDelete: Restrict)

  @@index([tournamentId])
  @@index([roundId])
  @@index([roundId, winnerId])
  @@index([tournamentId, positionInBracket])
  @@index([player1Id])
  @@index([player2Id])
  @@map("matches")
}
